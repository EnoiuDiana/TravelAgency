<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="450.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Register.SignupController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Please, sign up:" />
        <VBox layoutX="18.0" layoutY="77.0" prefHeight="69.0" prefWidth="100.0" spacing="30.0">
            <children>
                <Label lineSpacing="30.0" text="Username:" />
            <Label text="Email:" />
                <Label lineSpacing="30.0" text="Password: " />
            </children>
        </VBox>
        <VBox layoutX="142.0" layoutY="70.0" prefHeight="120.0" prefWidth="277.0" spacing="10.0">
            <children>
                <TextField fx:id="usernameTextField" />
            <TextField fx:id="emailTextField" />
            <PasswordField fx:id="passwordTextField" />
            </children>
        </VBox>
        <Button layoutX="15.0" layoutY="242.0" mnemonicParsing="false" onAction="#signupButtonPushed" text="Sign up" />
        <Label layoutX="13.0" layoutY="297.0" text="Already have an account?" />
        <Button layoutX="14.0" layoutY="323.0" mnemonicParsing="false" onAction="#loginButtonPushed" text="Log in" />
    </children>
</AnchorPane>
